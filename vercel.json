{
    "version": 2,
    "functions": {
      "nombre_de_tu_funcion": {
          "runtime": "nombre_del_runtime",
          "timeout": 60
      }
    },
    "builds": [
      {
        "src": "index.js", 
        "use": "@vercel/node"
      },
      {
        "src": "./node_modules/bcrypt/**/*",
        "use": "@vercel/node",
        "config": {
                "VERCEL_BUILDER_CMD": "yarn --ignore-engines --ignore-scripts --prefer-offline add bcrypt"
            }
        },
        {
            "src": "./node_modules/bcryptjs/**/*",
            "use": "@vercel/node"
        }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.js"
      }
    ]
    
  }